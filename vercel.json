{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm install && chmod +x node_modules/.bin/tsc && npm run build"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ]
}
