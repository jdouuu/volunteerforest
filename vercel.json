{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm install && chmod +x node_modules/.bin/tsc && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ]
}
